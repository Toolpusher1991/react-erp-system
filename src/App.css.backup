}

.dark-mode .asset-table .status-maintenance {
  background: rgba(245, 158, 11, 0.2);
  color: #fbbf24;
  border: 1px solid rgba(245, 158, 11, 0.4);
}

.dark-mode .asset-table .status-malfunction {
  background: rgba(239, 68, 68, 0.2);
  color: #f87171;
  border: 1px solid rgba(239, 68, 68, 0.4);
}

.dark-mode .asset-table .status-shutdown {
  background: rgba(107, 114, 128, 0.2);
  color: #9ca3af;
  border: 1px solid rgba(107, 114, 128, 0.4);
}

/* Statistics Numbers in Table */
.dark-mode .asset-table .stat-number-cell {
  font-size: 1.125rem;
  font-weight: 800;
  color: white;
}

/* Spalten-Farben */
.dark-mode .asset-table td:nth-child(6) {
  color: #9ca3af;
  font-weight: 700;
}

.dark-mode .asset-table td:nth-child(7) {
  color: #fbbf24;
  font-weight: 700;
}

.dark-mode .asset-table td:nth-child(8) {
  color: #60a5fa;
  font-weight: 700;
}

.dark-mode .asset-table td:nth-child(9) {
  color: #34d399;
  font-weight: 700;
}

/* Edit Button */
.dark-mode .btn-edit-asset {
  background: var(--primary);
  color: white;
  padding: 0.625rem 1.25rem;
  border: none;
  border-radius: 10px;
  font-size: 0.875rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 8px rgba(37, 99, 235, 0.3);
}

.dark-mode .btn-edit-asset:hover {
  background: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.5);
}

/* Asset Title */
.dark-mode h1 {
  color: white;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 2rem;
  font-size: 2rem;
  font-weight: 900;
}

/* Loading State */
.dark-mode .asset-table-loading {
  text-align: center;
  padding: 3rem;
  color: #9ca3af;
  font-weight: 600;
}

/* Empty State */
.dark-mode .asset-table-empty {
  text-align: center;
  padding: 4rem 2rem;
  color: #9ca3af;
  font-weight: 600;
  font-size: 1.125rem;
}

/* Animationen */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dark-mode .overview-card {
  animation: fadeInUp 0.4s ease forwards;
  opacity: 0;
}

.dark-mode .overview-card:nth-child(1) { animation-delay: 0.1s; }
.dark-mode .overview-card:nth-child(2) { animation-delay: 0.2s; }
.dark-mode .overview-card:nth-child(3) { animation-delay: 0.3s; }
.dark-mode .overview-card:nth-child(4) { animation-delay: 0.4s; }

/* Responsive Optimierungen */
@media (max-width: 1200px) {
  .dark-mode .asset-overview {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .dark-mode .asset-overview {
    grid-template-columns: 1fr;
  }
  
  .dark-mode .asset-filter-buttons {
    flex-wrap: wrap;
  }
  
  .dark-mode .filter-btn {
    flex: 1 1 calc(50% - 0.375rem);
    justify-content: center;
  }
}