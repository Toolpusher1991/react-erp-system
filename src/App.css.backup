/* ==========================================
   RESPONSIVE
   ========================================== */

@media (max-width: 768px) {
  .container {
    padding: 1.25rem;
  }
  
  h1 {
    font-size: 1.5rem;
  }
  
  .dashboard-header {
    flex-direction: column;
    gap: 1.25rem;
    padding: 1.25rem;
  }
  
  .dashboard-nav {
    flex-direction: column;
    margin: 0 1.25rem 1.5rem 1.25rem;
  }
  
  .nav-btn {
    width: 100%;
  }
  
  .dashboard-stats,
  .wo-stats,
  .asset-overview {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .asset-grid {
    grid-template-columns: 1fr;
  }
  
  .wo-detail-grid {
    grid-template-columns: 1fr;
  }
  
  .form-row,
  .wo-create-body .form-row,
  .wo-edit-body .form-row {
    grid-template-columns: 1fr;
  }
  
  .notification-dropdown {
    width: 92vw;
    right: 50%;
    transform: translateX(50%);
  }
  
  .wo-detail-modal,
  .wo-create-modal,
  .wo-edit-modal,
  .asset-edit-modal {
    width: 95%;
    max-height: 95vh;
  }

  .wo-detail-footer {
    flex-direction: column;
