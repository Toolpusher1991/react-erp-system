/* ==========================================
   HOVER STATES FÃR ALLE BUTTONS
   ========================================== */

.btn-wo-complete,
.btn-wo-edit,
.btn-wo-delete,
.btn-wo-close,
.btn-create-submit,
.btn-create-cancel,
.btn-edit-save,
.btn-edit-cancel {
  position: relative;
  isolation: isolate;
}

/* Ripple Effect beim Click */
.btn-wo-complete:active::after,
.btn-wo-edit:active::after,
.btn-wo-delete:active::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.3);
  animation: ripple 0.6s ease-out;
  pointer-events: none;
}

@keyframes ripple {
  from {
    transform: scale(0);
    opacity: 1;
  }
  to {
    transform: scale(1);
    opacity: 0;
  }
}

