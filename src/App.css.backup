/* ==========================================
   MODERN PROFESSIONAL CMMS DESIGN
   ========================================== */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  /* Moderne Farbpalette */
  --primary: #2563eb;
  --primary-light: #3b82f6;
  --primary-dark: #1d4ed8;
  --primary-darker: #1e40af;
  
  /* GrautÃ¶ne */
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
  
  /* Status-Farben */
  --success: #10b981;
  --success-light: #34d399;
  --warning: #f59e0b;
  --warning-light: #fbbf24;
  --danger: #ef4444;
  --danger-light: #f87171;
  --info: #3b82f6;
  
  /* Schatten */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

body {
  background: var(--gray-50);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  color: var(--gray-900);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
}

h1 {
  color: var(--gray-900);
  margin-bottom: 2rem;
  font-size: 2rem;
  font-weight: 800;
  letter-spacing: -0.025em;
}

/* ==========================================
   DASHBOARD HEADER
   ========================================== */

.dashboard-header {
  background: white;
  padding: 1.25rem 2rem;
  border-bottom: 1px solid var(--gray-200);
  margin-bottom: 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-sm);
}

.dashboard-header > div {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.dashboard-header span {
  font-size: 0.9375rem;
  color: var(--gray-700);
  font-weight: 500;
}

.user-role {
  background: var(--primary);
  color: white;
  padding: 0.375rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.logout-btn {
  background: var(--gray-100);
  color: var(--gray-700);
  padding: 0.625rem 1.25rem;
  border: 1px solid var(--gray-200);
  border-radius: 10px;
  font-size: 0.9375rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.logout-btn:hover {
  background: var(--gray-200);
  border-color: var(--gray-300);
  transform: translateY(-1px);
}

/* ==========================================
   NAVIGATION
   ========================================== */

.dashboard-nav {
  background: white;
  padding: 0.5rem;
  margin: 0 2rem 2rem 2rem;
  display: flex;
  gap: 0.5rem;
  border-radius: 12px;
  box-shadow: var(--shadow);
  border: 1px solid var(--gray-200);
}

.nav-btn {
  background: transparent;
  color: var(--gray-600);
  padding: 0.875rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-size: 0.9375rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  position: relative;
}

.nav-btn:hover {
  background: var(--gray-100);
  color: var(--gray-900);
}

.nav-btn.active {
  background: var(--primary);
  color: white;
  box-shadow: var(--shadow-md);
}

/* ==========================================
   DASHBOARD STATISTICS
   ========================================== */

.dashboard-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.5rem;
  margin: 0 2rem 2rem 2rem;
}

.dashboard-stat-card {
  background: white;
  padding: 1.75rem;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  display: flex;
  align-items: center;
  gap: 1.25rem;
  transition: all 0.3s ease;
  box-shadow: var(--shadow);
}

.dashboard-stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary);
}

.stat-icon {
  font-size: 2.5rem;
  opacity: 0.9;
  min-width: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gray-50);
  border-radius: 12px;
  padding: 0.75rem;
}

.stat-content h3 {
  margin: 0 0 0.5rem 0;
  color: var(--gray-500);
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 700;
}

.stat-big-number {
  font-size: 2.25rem;
  font-weight: 800;
  margin: 0;
  color: var(--gray-900);
  line-height: 1;
}

/* ==========================================
   FORMS
   ========================================== */

.form-container {
  background: white;
  padding: 2rem;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  margin-bottom: 2rem;
  box-shadow: var(--shadow);
}

.form-container h2 {
  margin: 0 0 1.5rem 0;
  color: var(--gray-900);
  font-size: 1.375rem;
  font-weight: 700;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group label {
  display: block;
  margin-bottom: 0.625rem;
  color: var(--gray-700);
  font-weight: 600;
  font-size: 0.875rem;
}

.form-container input,
.form-container select,
.form-container textarea {
  width: 100%;
  padding: 0.875rem 1rem;
  margin-bottom: 0;
  border: 2px solid var(--gray-200);
  border-radius: 10px;
  font-size: 0.9375rem;
  font-family: inherit;
  background: white;
  color: var(--gray-900);
  transition: all 0.2s ease;
  font-weight: 500;
}

.form-container input:focus,
.form-container select:focus,
.form-container textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
  transform: translateY(-1px);
}

.form-container input::placeholder,
.form-container textarea::placeholder {
  color: var(--gray-400);
}

.form-container textarea {
  resize: vertical;
  min-height: 100px;
  line-height: 1.6;
}

.form-container button {
  background: var(--primary);
  color: white;
  padding: 0.875rem 1.75rem;
  border: none;
  border-radius: 10px;
  font-size: 0.9375rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: var(--shadow);
}

.form-container button:hover {
  background: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.form-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

/* ==========================================
   TABLES
   ========================================== */

.user-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  background: white;
  border-radius: 16px;
  overflow: hidden;
  border: 1px solid var(--gray-200);
  box-shadow: var(--shadow);
}

.user-table thead {
  background: var(--gray-50);
  border-bottom: 2px solid var(--gray-200);
}

.user-table th {
  padding: 1.125rem 1.5rem;
  text-align: left;
  font-weight: 700;
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--gray-600);
}

.user-table td {
  padding: 1.125rem 1.5rem;
  border-bottom: 1px solid var(--gray-100);
  color: var(--gray-700);
  font-size: 0.9375rem;
  font-weight: 500;
}

.user-table tbody tr {
  transition: all 0.2s ease;
}

.user-table tbody tr:hover {
  background: var(--gray-50);
}

.user-table tbody tr:last-child td {
  border-bottom: none;
}

/* Status Badges */
.status {
  padding: 0.375rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.status.active {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

.status.inactive {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger);
}

.status:hover {
  transform: scale(1.05);
}

/* Action Buttons */
.edit-btn,
.delete-btn {
  padding: 0.625rem 1rem;
  border: none;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.edit-btn {
  background: var(--gray-100);
  color: var(--gray-700);
  margin-right: 0.625rem;
  border: 1px solid var(--gray-200);
}

.edit-btn:hover {
  background: var(--gray-200);
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

.delete-btn {
  background: rgba(239, 68, 68, 0.1);
  color: var(--danger);
  border: 1px solid rgba(239, 68, 68, 0.2);
}

.delete-btn:hover {
  background: rgba(239, 68, 68, 0.2);
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

/* ==========================================
   ASSET MANAGEMENT
   ========================================== */

.asset-overview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.overview-card {
  background: white;
  padding: 1.75rem;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  transition: all 0.3s ease;
  box-shadow: var(--shadow);
}

.overview-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary);
}

.overview-card h3 {
  margin: 0 0 0.75rem 0;
  color: var(--gray-500);
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-weight: 700;
}

.big-number {
  font-size: 2.5rem;
  font-weight: 800;
  margin: 0.5rem 0;
  color: var(--gray-900);
  line-height: 1;
}

.overview-card span {
  color: var(--gray-500);
  font-size: 0.875rem;
  font-weight: 500;
}

/* Asset Grid */
.asset-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
  gap: 1.5rem;
}

.asset-card {
  background: white;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: var(--shadow);
}

.asset-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
  border-color: var(--primary);
}

.asset-card-header {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: white;
  padding: 1.75rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.asset-card-header h2 {
  margin: 0;
  font-size: 1.375rem;
  font-weight: 800;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.asset-card-body {
  padding: 1.75rem;
}

.asset-card-body p {
  margin: 0.875rem 0;
  color: var(--gray-700);
  font-size: 0.9375rem;
  display: flex;
  justify-content: space-between;
  font-weight: 500;
}

.asset-card-body strong {
  color: var(--gray-600);
  font-weight: 700;
  min-width: 120px;
}

.asset-notes {
  margin-top: 1.25rem;
  padding: 1.25rem;
  background: var(--gray-50);
  border-radius: 12px;
  color: var(--gray-600);
  font-style: italic;
  font-size: 0.875rem;
  border-left: 4px solid var(--primary);
}

.asset-card-footer {
  padding: 1.25rem 1.75rem;
  background: var(--gray-50);
  border-top: 1px solid var(--gray-200);
}

/* Asset Status Badges */
.asset-status {
  padding: 0.5rem 1rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}

.status-operational {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

.status-maintenance {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.status-malfunction {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger);
}

.status-shutdown {
  background: var(--gray-100);
  color: var(--gray-600);
}

.btn-details {
  width: 100%;
  background: var(--primary);
  color: white;
  padding: 0.875rem;
  border: none;
  border-radius: 10px;
  font-weight: 700;
  font-size: 0.9375rem;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: var(--shadow);
}

.btn-details:hover {
  background: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* ==========================================
   WORK ORDER MANAGEMENT
   ========================================== */

.wo-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.btn-create-wo {
  background: var(--primary);
  color: white;
  padding: 0.875rem 1.75rem;
  border: none;
  border-radius: 10px;
  font-size: 0.9375rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: var(--shadow-md);
}

.btn-create-wo:hover {
  background: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Asset Tabs */
.asset-tabs {
  display: flex;
  gap: 0.75rem;
  margin-bottom: 2rem;
  padding: 1rem;
  background: white;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  overflow-x: auto;
  box-shadow: var(--shadow);
}

.asset-tab {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.5rem;
  background: transparent;
  border: 2px solid var(--gray-200);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  flex-shrink: 0;
}

.asset-tab:hover {
  background: var(--gray-50);
  border-color: var(--gray-300);
  transform: translateY(-2px);
}

.asset-tab.active {
  background: var(--primary);
  border-color: var(--primary);
  color: white;
  box-shadow: var(--shadow-md);
}

.asset-tab-icon {
  font-size: 1.75rem;
  line-height: 1;
}

.asset-tab-name {
  font-weight: 800;
  font-size: 1rem;
  letter-spacing: 0.025em;
}

.asset-tab-count {
  background: rgba(0, 0, 0, 0.1);
  padding: 0.375rem 0.625rem;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 800;
  min-width: 28px;
  text-align: center;
}

.asset-tab.active .asset-tab-count {
  background: rgba(255, 255, 255, 0.25);
}

/* Category Tabs */
.category-tabs {
  display: flex;
  gap: 0.75rem;
  margin-bottom: 2rem;
  padding: 0.75rem;
  background: white;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  box-shadow: var(--shadow);
}

.category-tab {
  display: flex;
  align-items: center;
  gap: 0.625rem;
  padding: 0.875rem 1.25rem;
  background: transparent;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  flex: 1;
  justify-content: center;
  font-size: 0.9375rem;
  font-weight: 700;
  color: var(--gray-700);
}

.category-tab:hover {
  background: var(--gray-100);
}

.category-tab.active {
  background: var(--primary);
  color: white;
  box-shadow: var(--shadow-md);
}

.category-count {
  background: rgba(0, 0, 0, 0.1);
  padding: 0.25rem 0.625rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 800;
  min-width: 26px;
  text-align: center;
}

.category-tab.active .category-count {
  background: rgba(255, 255, 255, 0.25);
}

/* Work Order Stats */
.wo-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.stat-card {
  background: white;
  padding: 1.75rem;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  transition: all 0.3s ease;
  box-shadow: var(--shadow);
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary);
}

.stat-card h3 {
  margin: 0 0 0.75rem 0;
  color: var(--gray-500);
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-weight: 700;
}

.stat-number {
  font-size: 2.5rem;
  font-weight: 800;
  margin: 0;
  color: var(--gray-900);
  line-height: 1;
}

/* Work Order Table */
.wo-table-container {
  background: white;
  border-radius: 16px;
  border: 1px solid var(--gray-200);
  overflow: hidden;
  box-shadow: var(--shadow);
}

.wo-table {
  width: 100%;
  border-collapse: collapse;
}

.wo-table thead {
  background: var(--gray-50);
  border-bottom: 2px solid var(--gray-200);
}

.wo-table th {
  padding: 1.125rem 1.5rem;
  text-align: left;
  font-weight: 700;
  font-size: 0.8125rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--gray-600);
}

.wo-table tbody tr {
  border-bottom: 1px solid var(--gray-100);
  cursor: pointer;
  transition: all 0.2s ease;
}

.wo-table tbody tr:hover {
  background: var(--gray-50);
}

.wo-table tbody tr:last-child {
  border-bottom: none;
}

.wo-table td {
  padding: 1.125rem 1.5rem;
  color: var(--gray-700);
  font-size: 0.9375rem;
  font-weight: 500;
}

.wo-id {
  font-weight: 800;
  color: var(--primary);
}

.wo-type-icon {
  font-size: 1.25rem;
}

.wo-title-cell strong {
  color: var(--gray-900);
  font-weight: 700;
}

/* Priority & Status Badges */
.wo-priority {
  padding: 0.375rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  white-space: nowrap;
  display: inline-block;
}

.priority-low {
  background: rgba(59, 130, 246, 0.15);
  color: var(--info);
}

.priority-normal {
  background: var(--gray-100);
  color: var(--gray-600);
}

.priority-high {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.priority-critical {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger);
}

.wo-status {
  padding: 0.375rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  white-space: nowrap;
}

.wo-status-new {
  background: rgba(59, 130, 246, 0.15);
  color: var(--primary-light);
}

.wo-status-assigned {
  background: rgba(139, 92, 246, 0.15);
  color: #7c3aed;
}

.wo-status-progress {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.wo-status-completed {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

.wo-status-cancelled {
  background: var(--gray-100);
  color: var(--gray-600);
}

/* Material Status */
.material-status {
  padding: 0.375rem 0.75rem;
  border-radius: 8px;
  font-size: 0.8125rem;
  font-weight: 700;
  white-space: nowrap;
}

.material-not-required {
  background: var(--gray-100);
  color: var(--gray-600);
}

.material-required {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.material-ordered {
  background: rgba(59, 130, 246, 0.15);
  color: var(--info);
}

.material-delivered {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

/* ==========================================
   MODALS
   ========================================== */

.wo-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
