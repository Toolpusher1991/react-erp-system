    flex-direction: column;
  }

  .btn-confirm-cancel,
  .btn-confirm-ok {
    width: 100%;
  }
}

/* Pulse Animation fÃ¼r dringende BestÃ¤tigungen */
.confirm-danger .confirm-modal-icon span,
.confirm-warning .confirm-modal-icon span {
  animation: iconBounce 0.6s ease, iconPulse 2s ease-in-out infinite 0.6s;
}

@keyframes iconPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* Focus States fÃ¼r Accessibility */
.btn-confirm-cancel:focus,
.btn-confirm-ok:focus {
  outline: 3px solid rgba(37, 99, 235, 0.3);
  outline-offset: 2px;
}

.btn-confirm-ok.confirm-success:focus {
  outline-color: rgba(16, 185, 129, 0.3);
}

.btn-confirm-ok.confirm-danger:focus {
  outline-color: rgba(239, 68, 68, 0.3);
}

.btn-confirm-ok.confirm-warning:focus {
  outline-color: rgba(245, 158, 11, 0.3);
}

/* ==========================================
   TOAST NOTIFICATION SYSTEM
   ========================================== */
/* FÃ¼ge dies zu deiner App.css hinzu */

.toast-container {
  position: fixed;
  top: 5rem;
  right: 2rem;
  z-index: 99999;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  pointer-events: none;
}

.toast {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.5rem;
  background: white;
  border-radius: 12px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.25);
  min-width: 320px;
  max-width: 450px;
  pointer-events: all;
  animation: toastSlideIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  border-left: 4px solid;
}

@keyframes toastSlideIn {
  from {
    opacity: 0;
    transform: translateX(100%);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.toast-icon {
  font-size: 1.5rem;
  line-height: 1;
  flex-shrink: 0;
  animation: iconPop 0.4s ease;
}

@keyframes iconPop {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.toast-message {
  flex: 1;
  font-size: 0.9375rem;
  font-weight: 600;
  color: #111827;
  line-height: 1.5;
}

.toast-close {
  background: transparent;
  border: none;
  color: #6b7280;
  font-size: 1.25rem;
  cursor: pointer;
  padding: 0.25rem;
  line-height: 1;
  flex-shrink: 0;
  transition: all 0.2s ease;
  border-radius: 4px;
  width: 28px;
  height: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toast-close:hover {
  background: rgba(0, 0, 0, 0.08);
  color: #111827;
  transform: rotate(90deg);
}

/* Success Toast */
.toast-success {
  border-left-color: #10b981;
  background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
}

.toast-success .toast-icon {
  filter: drop-shadow(0 2px 8px rgba(16, 185, 129, 0.3));
}

/* Error Toast */
.toast-error {
  border-left-color: #ef4444;
  background: linear-gradient(135deg, #ffffff 0%, #fef2f2 100%);
}

.toast-error .toast-icon {
  filter: drop-shadow(0 2px 8px rgba(239, 68, 68, 0.3));
}

/* Warning Toast */
.toast-warning {
  border-left-color: #f59e0b;
  background: linear-gradient(135deg, #ffffff 0%, #fffbeb 100%);
}

.toast-warning .toast-icon {
  filter: drop-shadow(0 2px 8px rgba(245, 158, 11, 0.3));
  animation: iconPop 0.4s ease, iconShake 0.5s ease 0.4s;
}

@keyframes iconShake {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-10deg);
  }
  75% {
    transform: rotate(10deg);
  }
}

/* Info Toast */
.toast-info {
  border-left-color: #3b82f6;
  background: linear-gradient(135deg, #ffffff 0%, #eff6ff 100%);
}

.toast-info .toast-icon {
  filter: drop-shadow(0 2px 8px rgba(59, 130, 246, 0.3));
}

/* Mobile Responsive */
@media (max-width: 640px) {
  .toast-container {
    right: 1rem;
    left: 1rem;
    top: 4rem;
  }

  .toast {
    min-width: auto;
    width: 100%;
    max-width: none;
  }

  .toast-message {
    font-size: 0.875rem;
  }
}

/* Hover Effect */
.toast:hover {
  transform: translateX(-4px);
  box-shadow: 0 12px 48px rgba(0, 0, 0, 0.3);
}

/* Progress Bar (optional) */
.toast::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  height: 3px;
  background: currentColor;
  opacity: 0.3;
  animation: toastProgress 4s linear;
  border-radius: 0 0 12px 12px;
}

@keyframes toastProgress {
  from {
    width: 100%;
  }
  to {
    width: 0%;
  }
}

.toast-success::after {
  color: #10b981;
}

.toast-error::after {
  color: #ef4444;
}

.toast-warning::after {
  color: #f59e0b;
}

.toast-info::after {
  color: #3b82f6;
}

