}

/* Hover Overlay Card */
.hover-card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20px;
  border: 3px solid var(--primary);
  box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.35);
