}

.btn-wo-delete:hover::before {
  left: 100%;
}

.btn-wo-delete:hover {
  background: linear-gradient(135deg, #dc2626, var(--danger));
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 6px 24px rgba(239, 68, 68, 0.6);
