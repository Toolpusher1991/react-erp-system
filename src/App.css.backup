  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn-wo-complete:hover::before {
  width: 300px;
  height: 300px;
}

.btn-wo-complete:hover {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
