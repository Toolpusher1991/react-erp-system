    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

/* Checkmark Animation fÃ¼r erledigte WOs */
.wo-status-completed::after {
  content: "â";
  margin-left: 0.25rem;
  font-size: 1rem;
  animation: checkmarkPop 0.4s ease;
}

